---
import LayoutSign from '@/layouts/LayoutSign.astro';
import FormSignUp from '@/components/FormSignUp';

---

<LayoutSign title="Inicio de Sesión">
  <main class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md p-8 space-y-6 bg-white rounded shadow-md">
        <h2 class="text-2xl font-bold text-center">Registrarse</h2>
        <FormSignUp client:load />
        <div class="text-center mt-4 flex w-full justify-center items-center gap-2">
            <p class="text-sm text-gray-600">¿Ya tienes una cuenta?</p>
            <a href="/" class="inline-block text-indigo-600  hover:text-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:underline">Iniciar Sesión</a>
        </div>
    </div>
  </main>

</LayoutSign>