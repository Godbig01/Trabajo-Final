---
import Layout from "@/layouts/Layout.astro";
import LinkReturn from "@/components/utils/LinkReturn";
import Loader from "@/components/Loader.astro";

import FormCreateProvider from "@/components/FormCreateProve";

if (!Astro.locals.user) {
    return Astro.redirect("/")
}

---
<Layout title="Crear Proveedores | Tienda 7 de Agosto">
    <Loader />
    <div class="hidden" id="content">
        <div class="flex flex-col bg-[#f4f4f5] px-8 py-5 rounded-xl w-[400px] mx-auto mt-6">
            <h2 class="text-2xl font-bold text-center">Crear Proveedores</h2>
            <FormCreateProvider client:load />
        </div>
    </div>
    <LinkReturn />
</Layout>